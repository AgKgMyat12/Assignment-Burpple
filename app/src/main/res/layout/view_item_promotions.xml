<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_medium"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/black_full">

        <ImageView
            android:id="@+id/iv_food_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:alpha="0.65"
            android:scaleType="centerCrop"
            android:src="@drawable/shabu_burger" />

        <TextView
            android:id="@+id/tv_burpple_exclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_promotion"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_large"
            android:background="@drawable/rectangle_yellow"
            android:padding="2dp"
            android:text="BURPPLE EXCLUSIVE"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider_line"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_large"
            android:maxLines="3"
            android:text="1-for-1 Shabu Burger"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_above="@id/tv_promotion_date"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_large"
            android:src="@drawable/divider_margin_horizontal_line" />

        <TextView
            android:id="@+id/tv_promotion_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_food_image"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:text="TILL 31ST JAN '18"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/box_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Wildfire Chicken &amp; Burgers (Savourworld)"
            android:textColor="@color/white_full"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="@dimen/text_regular"
            android:layout_marginTop="@dimen/margin_medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Kent Ridge"
            android:textColor="@color/white_full"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:ellipsize="end"
            android:textSize="@dimen/text_small"
            android:layout_marginBottom="@dimen/margin_medium"/>

    </LinearLayout>
</LinearLayout>