<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <com.example.hp.assignmentburpple.components.TrendingVenuesView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_shop_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:text="Trending Venues"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_shop_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_shop_type_title"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:scaleType="centerCrop"
            android:src="@drawable/sushi_kimura" />

        <TextView
            android:id="@+id/tv_shop_name1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@id/iv_shop_image1"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/iv_shop_image1"
            android:gravity="center_vertical"
            android:text="Sushi Kimura"
            android:textSize="@dimen/text_small"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_shop_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_shop_image1"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/nesuto_logo" />

        <TextView
            android:id="@+id/tv_shop_name2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@id/iv_shop_image2"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/iv_shop_image2"
            android:gravity="center_vertical"
            android:text="Nesuto"
            android:textSize="@dimen/text_small"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_shop_image3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/iv_shop_image2"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:scaleType="centerCrop"
            android:src="@drawable/misato_sushi" />

        <TextView
            android:id="@+id/tv_shop_name3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@id/iv_shop_image3"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/iv_shop_image3"
            android:gravity="center_vertical"
            android:text="Misato"
            android:textSize="@dimen/text_small"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/iv_shop_image3"
            android:src="@drawable/divider_margin_horizontal_line" />

        <TextView
            android:id="@+id/tv_explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_line"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="EXPLORE" />

    </com.example.hp.assignmentburpple.components.TrendingVenuesView>
</android.support.v7.widget.CardView>